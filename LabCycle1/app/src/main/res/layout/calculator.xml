<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/blk3">
    <?xml version="1.0" encoding="utf-8"?>


    <TextView
        android:id="@+id/result"
        android:layout_width="356dp"
        android:layout_height="71dp"
        android:background="@color/blk3"
        android:text="result"
        android:textColorLink="@color/white"
        android:textSize="25sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="404dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="4dp"
        android:backgroundTint="@color/blk1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:orientation="horizontal"
            android:background="@color/blk1">

            <Button
                android:id="@+id/button1"
                android:layout_width="@string/size"
                android:layout_height="@string/size"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="C"
                android:backgroundTint="@color/blk2"
                android:textSize="@string/fontsize"
                />

            <Button
                android:id="@+id/button2"
                android:layout_width="@string/size"
                android:layout_height="@string/size"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="+/="
                android:backgroundTint="@color/blk2"
                android:textSize="@string/fontsize" />

            <Button
                android:id="@+id/button3"
                android:layout_width="@string/size"
                android:layout_height="@string/size"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="%"
                android:backgroundTint="@color/blk2"
                android:textSize="@string/fontsize" />

            <Button
                android:id="@+id/button4"
                android:layout_width="@string/size"
                android:layout_height="@string/size"
                android:layout_margin="8dp"
                android:backgroundTint="@color/blk2"
                android:text="/"
                android:textSize="@string/fontsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal"
            android:background="@color/blk1">

            <Button
                android:id="@+id/button5"
                android:layout_width="@string/size"
                android:layout_height="@string/size"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="7"
                android:backgroundTint="@color/blk2"
                android:textSize="@string/fontsize" />

            <Button
                android:id="@+id/button6"
                android:layout_width="@string/size"
                android:layout_height="@string/size"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="8"
                android:backgroundTint="@color/blk2"
                android:textSize="@string/fontsize" />

            <Button
                android:id="@+id/button7"
                android:layout_width="@string/size"
                android:layout_height="@string/size"
                android:layout_margin="8dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="9"
                android:backgroundTint="@color/blk2"
                android:textSize="@string/fontsize" />

            <Button
                android:id="@+id/button8"
                android:layout_width="@string/size"
                android:layout_height="@string/size"
                android:layout_margin="8dp"
                android:text="X"
                android:backgroundTint="@color/blk2"
                android:textSize="@string/fontsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="horizontal"
            android:background="@color/blk1">

            <Button
                android:id="@+id/button9"
                android:layout_width="@string/size"
                android:layout_height="@string/size"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="4"
                android:backgroundTint="@color/blk2"
                android:textSize="@string/fontsize" />

            <Button
                android:id="@+id/button10"
                android:layout_width="@string/size"
                android:layout_height="@string/size"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="5"
                android:backgroundTint="@color/blk2"
                android:textSize="@string/fontsize" />

            <Button
                android:id="@+id/button11"
                android:layout_width="@string/size"
                android:layout_height="@string/size"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="6"
                android:backgroundTint="@color/blk2"
                android:textSize="@string/fontsize" />

            <Button
                android:id="@+id/button12"
                android:layout_width="@string/size"
                android:layout_height="@string/size"
                android:layout_margin="8dp"
                android:text="-"
                android:backgroundTint="@color/blk2"
                android:textSize="@string/fontsize"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@color/blk1">

            <Button
                android:id="@+id/button13"
                android:layout_width="@string/size"
                android:layout_height="@string/size"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="2"
                android:backgroundTint="@color/blk2"
                android:textSize="@string/fontsize" />

            <Button
                android:id="@+id/button14"
                android:layout_width="@string/size"
                android:layout_height="@string/size"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="1"
                android:backgroundTint="@color/blk2"
                android:textSize="@string/fontsize" />

            <Button
                android:id="@+id/button15"
                android:layout_width="@string/size"
                android:layout_height="@string/size"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="3"
                android:backgroundTint="@color/blk2"
                android:textSize="@string/fontsize" />

            <Button
                android:id="@+id/button16"
                android:layout_width="@string/size"
                android:layout_height="@string/size"
                android:layout_margin="8dp"
                android:text="+"
                android:backgroundTint="@color/blk2"
                android:textSize="@string/fontsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:background="@color/blk1">

            <Button
                android:id="@+id/button17"
                android:layout_width="@string/size"
                android:layout_height="@string/size"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="RST"
                android:backgroundTint="@color/blk2"
                android:textSize="@string/fontsize" />

            <Button
                android:id="@+id/button18"
                android:layout_width="@string/size"
                android:layout_height="@string/size"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="0"
                android:backgroundTint="@color/blk2"
                android:textSize="@string/fontsize" />

            <Button
                android:id="@+id/button19"
                android:layout_width="@string/size"
                android:layout_height="@string/size"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="."
                android:backgroundTint="@color/blk2"
                android:textSize="@string/fontsize" />

            <Button
                android:id="@+id/button20"
                android:layout_width="@string/size"
                android:layout_height="@string/size"
                android:layout_margin="8dp"
                android:text="="
                android:backgroundTint="@color/blk2"
                android:textSize="@string/fontsize" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>